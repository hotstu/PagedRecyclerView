<?xml version="1.0" encoding="utf-8"?>
<github.hotstu.pagedrecyclerview.demo.BouncingFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        app:layout_role="content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="HEADER"
        app:layout_role="header" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="FOOTER"
        app:layout_role="footer" />
</github.hotstu.pagedrecyclerview.demo.BouncingFrameLayout>